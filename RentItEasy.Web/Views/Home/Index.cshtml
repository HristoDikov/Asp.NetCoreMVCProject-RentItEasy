@using RentItEasy.Common
@model List<RentItEasy.Web.ViewModels.Home.AdViewModel>
@{
    this.ViewData["Title"] = $"Welcome to {GlobalConstants.SystemName}";
}

<div class="text-center">
    <h1 class="display-4">@this.ViewData["Title"]</h1>
    @foreach (var ad in Model)
    {
        <div class="card" style="width: 18rem;">
            <img class="card-img-top" src="@ad.Image/100px180/" alt="Card image cap">
            <div class="card-body">
                <h5 class="card-title">@ad.Title</h5>
                <p class="card-text">@ad.Description</p>
                <a href="#" class="btn btn-primary">Go somewhere</a>
            </div>
        </div>
    }
</div>
