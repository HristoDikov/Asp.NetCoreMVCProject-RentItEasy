@model RentItEasy.Areas.Agency.ViewModels.AdViewModel
@using System.Linq;
@{
    ViewData["Title"] = "My Ads";
}

<h1 class="text-center">@this.ViewData["Title"]</h1>

<div class="row">
    @if (!Model.MinimizedAds.Any())
    {
        <h5 class="text-center">None</h5>
    }
    @foreach (var ad in Model.MinimizedAds)
    {
        <div class="col-md-4; adView">
            <img src=@ad.Path class="imgView" alt="Card image cap">
            <div class="card-body">
                <h5 class="card-title">@ad.Title</h5>
                <p class="card-text">@ad.MinimizedDescription</p>
                <a asp-area="Agency" asp-controller="Ad" asp-action="ViewAd" asp-route-id="@ad.Id" class="btn btn-primary">Full Ad</a>
            </div>
        </div>
    }
</div>
<nav>
    <ul class="pagination justify-content-center">
        @if (this.Model.CurrentPage == 1)
        {
            <li class="page-item disabled">
                <a class="page-link" href="#">Previous</a>
            </li>
        }
        else
        {
            <li class="page-item">
                <a class="page-link"
                   asp-area="User"
                   asp-controller="Ad"
                   asp-action="MyAds"
                   asp-route-page="@(this.Model.CurrentPage - 1)">Previous</a>
            </li>
        }

        @for (int i = 1; i <= this.Model.PagesCount; i++)
        {
            var active = i == this.Model.CurrentPage ? "active" : string.Empty;
            <li class="page-item @active">
                <a class="page-link"
                   asp-area="User"
                   asp-controller="Ad"
                   asp-action="MyAds"
                   asp-route-page="@i">@i</a>
            </li>
        }

        @if (this.Model.CurrentPage == this.Model.PagesCount)
        {
            <li class="page-item disabled">
                <a class="page-link" href="#">Next</a>
            </li>
        }
        else
        {
            <li class="page-item">
                <a class="page-link"
                   asp-area="User"
                   asp-controller="Ad"
                   asp-action="MyAds"
                   asp-route-page="@(this.Model.CurrentPage + 1)">Next</a>
            </li>
        }
    </ul>
</nav>

